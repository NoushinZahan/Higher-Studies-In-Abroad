@model Evidence_Module_7.ViewModels.CountryEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-10">
        @using (Html.BeginForm("Edit", "Countries", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.CountryId)
            <h3 class="mb-2">Add new country</h3>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.CountryName, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.CountryName, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.CountryName, "", new { @class = "text-danger", style = "font-size:x-small" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Capital, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Capital, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Capital, "", new { @class = "text-danger", style = "font-size:x-small" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm", type = "file" })
                    @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger", style = "font-size:x-small" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="form-check offset-2">
                    @Html.CheckBoxFor(x => x.IsDeveloped)
                    <label class="form-check-label" for="flexCheckDefault">
                        IsDeveloped
                    </label>
                </div>
            </div>
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>UniversityName</th>
                            <th>AdmissionRequirment</th>
                            <th>EstublishDate</th>
                            <th>Ranking</th>
                            <th>
                                <button type="submit" class="btn btn-secondary btn-sm" name="act" value="add" formnovalidate>Add</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Universities.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.TextBoxFor(x => Model.Universities[i].UniversityName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Universities[i].UniversityName, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.Universities[i].AdmissionRequirment, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Universities[i].AdmissionRequirment, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.Universities[i].EstublishDate, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Universities[i].EstublishDate, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.Universities[i].Ranking, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Universities[i].Ranking, "", new { @class = "text-danger" })
                                </td>
                                <th>
                                    <button type="submit" class="btn btn-secondary btn-sm" name="act" value="remove_@i" formnovalidate>Remove</button>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group row mb-1">
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary btn-sm" name="act" value="update">Save to Database</button>
                </div>
            </div>

        }
    </div>
    <div class="col-2">
        <img src="~/Pictures/@ViewBag.CurrentPic" class="img-thumbnail" style="width:120px;" />
    </div>
</div>
@section styles
{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $("#BirthDate").datepicker({
            format: "yyyy-mm-dd"
        })

    </script>
}


